- content_for :page_title do
  - if params[:name]
    = "##{params[:name]}"
  - else
    = t('.whatup', :pod => @pod_url)

- content_for :head do
  = include_javascripts :home

- content_for :body_class do
  = "tags_show"

.span-24.last
  %h1.tag
    = "##{params[:name]}"

.span-15
  #main_stream.stream
    - if @posts.length > 0
      = render 'shared/stream', :posts => @posts
      #pagination
        =link_to(t('more'), tag_path(params[:name], :page => next_page), :class => 'paginate')
    - else
      = t('.nobody_talking', :tag => "##{params[:name]}")

.prepend-2.span-7.last
  %h3
    = t('people', :count => @people_count)

  .side_stream.stream
    - for person in @people
      .stream_element{:id => person.id}
        = person_image_link(person)
        - if current_user
          = render :partial => 'people/add_contact_small',
                   :locals => { :person => person }
        .content
          %span.from
            =person_link(person)
          .info
            = person.profile.format_tags(person.profile.tag_string)

    - if @people_count > 15
      \...
