- unless AppConfig[:paypal_hosted_button_id].blank?
  .section
    .title
      = image_tag('https://c790230.ssl.cf2.rackcdn.com/coffee.png')
      %h5
        = t('aspects.index.donate')
      .content
      = t('aspects.index.keep_us_running', :pod => URI.parse(AppConfig[:pod_url]).host)
