- if posts.length > 0
  - for post_hash in posts
    = render 'shared/stream_element', post_hash.merge(:all_aspects => @all_aspects, :commenting_disabled => defined?(@commenting_disabled))

- else
  = render 'aspects/no_posts_message', :post_count => posts.length
