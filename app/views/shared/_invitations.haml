- if AppConfig[:invites_off]
  = t('.invites_closed')
-else
  -if invites > 0
    - if SERVICES['facebook']['app_id'] !=""
      - if defined? remote
        = link_to t('.from_facebook')+(' Private Message'), friend_finder_path('facebook', :remote => remote), :rel => 'facebox'
      -else
        = link_to t('.from_facebook')+(' Private Message'), friend_finder_path('facebook'), :rel => 'facebox'
      %br
      = link_to t('.from_facebook')+(' Public Post'), '/fb', :rel => 'facebox'
      %br
      = link_to t('.by_email'), new_user_invitation_path, :title => t('.invite_someone'), :rel => 'facebox'
    - else
      = link_to t('.by_email'), new_user_invitation_path, :title => t('.invite_someone'), :rel => 'facebox'
  - else
    = t('.dont_have_now')
    = ('ask for some more and you will get them')
