.stream_element{:data=>{:guid=>post.id}}
  .right
    %span.time= how_long_ago(post)

  = person_image_link(post.person, :size => :thumb_small)

  .content
    .from
      = person_link(post.person)

    = render 'status_messages/status_message', :post => post, :photos => post.photos

    .info
      - if post.comments.length == 1
        = link_to "#{post.comments.length} #{t('_comment').downcase} â†’", status_message_path(post), :class => 'comment_link'
      - else
        = link_to "#{post.comments.length} #{t('_comments').downcase} â†’", status_message_path(post), :class => 'comment_link'

