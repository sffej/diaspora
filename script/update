#!/bin/bash

function pause(){
   read -p .$*.
}

rvm get stable

echo 'fetch upstream'
#git checkout upstream/master Gemfile.lock db/schema.rb
git checkout upstream/master db/schema.rb
git fetch upstream
echo "Merge upstream?"
select yn in "Yes" "No"; do
    case $yn in
        Yes ) git merge upstream/master; echo 'merged git'; break;;
        No ) break;;
    esac
done
cd .. && cd -
echo "push to git origin?"
select yn in "Yes" "No"; do
    case $yn in
        Yes ) git push origin master; break;;
        No ) break;;
    esac
done

echo "bundle install?"
select yn in "Yes" "No"; do
    case $yn in
        Yes ) RAILS_ENV=production bin/bundle install --jobs $(nproc) --deployment --without test development --with postgresql; break;;
        No ) break;;
    esac
done

echo "Do you wish to migrate db?"
select yn in "Yes" "No"; do
    case $yn in
        Yes ) RAILS_ENV=production DB=postgres bin/rake db:migrate; echo 'db migrated'; break;;
        No ) break;;
    esac
done

echo "remake assets?"
select yn in "Yes" "No"; do
    case $yn in
        Yes ) RAILS_ENV=production DB=postgres bin/rake assets:clean; RAILS_ENV=production DB=postgres bin/rake assets:precompile; break;;
        No ) break;;
    esac
done

